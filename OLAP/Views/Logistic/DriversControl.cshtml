            <th>
                Водитель №)
            </th>
            <th>
                ФИО
            </th>
            <th>
                Мобильный телефон
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ВодительID)
                </td>
