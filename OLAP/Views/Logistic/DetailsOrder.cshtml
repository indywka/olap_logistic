@model IEnumerable<OLAP.Models.ЗаказаноТоваров>

<div class="but_div">
    @Html.ActionLink("Добавить товар к заказу", "AddGoodInOrder", routeValues: null, htmlAttributes: new { @class = "btn mb1 black bg-gray", @role="button" })
    @Html.ActionLink("Вернуться обратно", "Managment", routeValues: null, htmlAttributes: new { @class = "btn mb1 black bg-gray", @role="button" })
</div>
 
<div class="table_div">
    <table rules="all" class="table_price">
        <caption>Просмотр данных по заказанным товарам</caption>
        <tr>
            <th>
                Номер заказа
            </th>
            <th>
                Код товара
            </th>
            <th>
                @Html.DisplayNameFor(model => model.РасценкаТоннЗаКм)
            </th>
            <th>
                Количество
            </th>
            <th>
                Масса
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ЗаказID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.КодТовара)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.РасценкаТоннЗаКм)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Количество)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Масса)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "EditGoodInOrder", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Удалить", "DeleteGoodInOrder", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
    </div class="table_div">
