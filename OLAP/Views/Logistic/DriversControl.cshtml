@model IEnumerable<OLAP.Models.Водители>

@{
    ViewBag.Title = "Управление водителями";
}

<div class="but_div">
    @Html.ActionLink("Добавить водителя", " ", routeValues: null, htmlAttributes: new { @class = "btn mb1 black bg-gray", @role = "button" })
    @Html.ActionLink("Вернуться обратно", "Managment", routeValues: null, htmlAttributes: new { @class = "btn mb1 black bg-gray", @role = "button" })
</div>

<div class="table_div">
    <table rules="all" class="table_price">
